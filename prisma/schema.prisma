// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model TattooMaker {
  id String  @id
  name String
  nickname String?
  email String  @unique
  phone Int?
  photoPath String?
  description String?
  collection Tattoo[]
  address Address?
  socialMedia SocialMedia[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tattoo {
  id String @id
  name String
  description String?
  photoPath String
  tattoMaker TattooMaker @relation(fields: [tattoMakerId], references: [id])
  tattoMakerId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Address {
  publicPlace String
  number Int
  complement String?
  neighborhood String
  city String
  state String
  zipCode String
  tattoMaker TattooMaker @relation(fields: [tattoMakerId], references: [id])
  tattoMakerId String @id
}

model SocialMedia {
  tattoMaker TattooMaker @relation(fields: [tattoMakerId], references: [id])
  tattoMakerId String @id
  url String
}
